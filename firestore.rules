rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{posts} {
      allow read;
      allow create: if request.auth.uid != null;
    }
    match /users/{userid} {
      allow read;
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == request.resource.data.uid;
    }
  }
}